<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4 col-md-offset-4">
    <section class="user_info">
      <%= gravatar_for @user, size: 80 %>
      <h1>
        <%= @user.name %>
      </h1>
      <p>
        <%= @user.email %>, <%= @user.created_at %>, <%= @user.updated_at%>
      </p>
    </section>
  </aside>
</div>
